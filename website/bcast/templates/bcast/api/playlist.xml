{% load thumbnail value_from_settings %}
{% value_from_settings "RTMP_IP" as rtmp_ip %}

<rss version="2.0" xmlns:jwplayer="http://developer.longtailvideo.com/">
  <channel>
    <title>Playlist with RTMP streams</title>

	<!-- state: {{ event.state }} -->

	{% if event.state == 'future' or event.state == 'today' %}
	
    <item>
      <title>{{ event.title }}</title>
      <description></description>
      
	  <enclosure url="/static/img/base/screen.test.png" type="video/flv" length="3192846" />
      
      {% if event.picture %}
      <enclosure url="{% thumbnail event.picture 500x400 crop %}" type="video/flv" length="3192846" />
      {% endif %} 
           
      {% if event.intro %}
      <enclosure url="{{ event.intro.url }}" type="video/flv" length="3192846" />
      {% endif %}
    </item>

	{% endif %}


	{% if event.state == 'now' %}
	
		<!-- now -->
	    <item>
	      <title>{{ event.title }} - LIVE! {{ event.key }}</title>
	      <description></description>
	      
	      
	      <enclosure url="flv:{{ event.key }}" />
	      <jwplayer:streamer>rtmp://{{ rtmp_ip }}:1935/d18live/</jwplayer:streamer>
	      <!--
	      <enclosure url="flv:combine.flv" />
	      <jwplayer:streamer>rtmp://{{ rtmp_ip }}:1935/d18recorded/</jwplayer:streamer>
	      -->
	    </item>

	
	{% endif %}


	{% if event.state == 'past' %}

	
		{% for video in videos %}
	    <item>
			<title>{% firstof video.name video %} | FLV-Plugin</title>
			<description>{% firstof video.description %}</description>			
			<enclosure url="flv:{{ video.filename }}" type="video/flv" length="{{ video.size }}" />
			
			<!-- extended properties for jwplayer-->
			<jwplayer:start>{{ video.offset }}</jwplayer:start>
			<jwplayer:streamer>rtmp://{{ rtmp_ip }}:1935/d18recorded/</jwplayer:streamer>
			
	    </item>
		{% endfor %}

	
		{% for file in folder.files %}
	    <item>
			<title>{% firstof file.name file %}</title>
			<description>{% firstof file.description %}</description>			
			<enclosure url="flv:{{ file.filename }}" type="video/flv" length="{{ file.size }}" />
			
			<!-- extended properties for jwplayer-->
			<jwplayer:start>{{ file.cue_in }}</jwplayer:start>
			<jwplayer:streamer>rtmp://{{ rtmp_ip }}:1935/d18recorded/</jwplayer:streamer>
			
	    </item>
		{% endfor %}
	
	{% endif %}


  </channel>
</rss>